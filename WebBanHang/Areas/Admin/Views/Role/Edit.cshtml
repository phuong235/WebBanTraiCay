@using Microsoft.AspNet.Identity.EntityFramework

@model IdentityRole
@{
    ViewBag.Title = "Cập nhật quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/posts" class="nav-link">Quyền</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/role" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Cập nhật quyền</h3>

                <div class="card-tools">
                    <a href="#" class="btn btn-success">Cập nhật</a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @if (Model != null)
                {
                    <div class="bs-stepper-content">
                        @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên quyền</label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên quyền" })
                                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                    <a class="btn btn-danger" href="/admin/role">Quay lại</a>
                                </div>
                            </div>


                        }
                    </div>
                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
