@model IEnumerable<WebBanHang.Context.OrderDetail>
@if (Model != null && Model.Any())
{
    var i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@(WebBanHang.Common.Common.FormatNumber(item.Price, 0) + " Đ")</td>
                    <td>@item.Quantity</td>
                    <td>@(WebBanHang.Common.Common.FormatNumber(item.Price * item.Quantity, 0) + " Đ")</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
