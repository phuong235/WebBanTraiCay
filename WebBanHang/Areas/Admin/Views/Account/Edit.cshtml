@model WebBanHang.Models.ApplicationUser
@{
    ViewBag.Title = "Cập nhật thông tin người dùng";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="card">
        <!-- SELECT2 EXAMPLE -->
        <div class="card-header">
            <h3 class="card-title">Cập nhật thông tin người dùng</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên danh mục</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Tên tài khoản" })
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Họ tên</label>
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                        </div>
                          <div class="form-group">
                                @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền", new { @class = "form-control" })
                            </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Lưu lại</button>
                        <a href="/admin/account" class="btn btn-danger">Quay lại</a>
                    </div>
                }

            </div>

        </div>

        <div class="card-footer">

        </div>
    </div>
    <!-- /.container-fluid -->
</section>