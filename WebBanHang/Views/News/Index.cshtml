@model IEnumerable<WebBanHang.Context.News>
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<style>
    .main-row {
        margin: 8%;
        background-color: white;
        box-shadow: 0 0 10px 10px rgba(0,0,0,0.05);
    }

    .news-img > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform: translateY(-20px);
        border-radius: 0.5rem;
        box-shadow: 0 0 8px 3px rgba(0,0,0,0.3);
    }

    .news-date {
        color: red;
        font-style: italic
    }

    .news-title > h2 {
        font-style: normal;
        font-weight: 400;
    }

    .news-desc {
        font-style: normal;
        line-height: 2;
    }
</style>

<div class="container" style="margin-top: 200px">
    <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
            <li><a href="/">Trang chủ</a></li>
            <li class="active">
                <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a>
            </li>
        </ul>
    </div>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="row main-row">
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="news-img">
                        <img src="@item.Image" alt="" />
                    </div>
                    <div class="row"></div>
                </div>
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <div class="news-title mt-2">
                        <h3>@item.Title</h3>
                    </div>
                    <div class="news-date mb-2">
                        <span>@item.CreatedDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="news-desc mb-2">
                        <p>@item.Description</p>
                    </div>
                    <div class="news-read-more mb-2">
                        <a href="/chi-tiet/@item.Alias-n@(item.Id)" class="btn btn-primary">Đọc thêm</a>
                    </div>
                </div>
            </div>
        }
    }
</div>



