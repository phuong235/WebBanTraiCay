@model WebBanHang.Context.News
@{
    ViewBag.Title = "Chi tiết tin tức";
}

<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        margin-bottom: 50px;
        width: 50%;
    }
</style>
@if (Model != null)
{
    <div class="container" style="margin-top: 200px">
        <div class="row">
            <div class="col-md-12">
                <article>
                    <header>
                        <h3>@Model.Title</h3>
                        <div>Viết bởi: <a href="#">@Model.Author</a></div>
                        <div>Ngày đăng: <time>@Model.CreatedDate.ToString("dd/MM/yyyy")</time></div>
                        <div><span class="badge badge-primary">13likes </span><span class="badge badge-primary">3 comments</span></div>
                    </header>
                    <section id="main">
                        <figure class="figure">
                            <img src="@Model.Image" alt="@Model.Title" class="center">
                            <figcaption class="figure-caption">
                                <p>@Model.Description</p>
                            </figcaption>
                        </figure>
                        <p>@Html.Raw(Model.Detail)</p>    
                    </section>
                </article>
            </div>
        </div>
    </div>
   
}

