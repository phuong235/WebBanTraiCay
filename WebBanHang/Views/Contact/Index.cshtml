@model WebBanHang.Context.Contact
@{ ViewBag.Title = "Liên hệ"; }
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_responsive.css">
<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Liên hệ</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Map Container -->
    <!-- Contact Us -->
    @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { }))
    {
@Html.AntiForgeryToken()
                @Html.ValidationSummary(true) if (ViewBag.Message == null)
                                {
                <div class="row">

                    <div class="col-lg-6 contact_col">
                        <div class="contact_contents">
                            <h1>Liên hệ chúng tôi</h1>
                            <p>Thông qua những hình thức sau:</p>
                            <div>
                                <p>(+84) 999-999-9999</p>
                                <p>freshfruice@gmail.com</p>
                            </div>
                        </div>

                        <!-- Follow Us -->

                        <div class="follow_us_contents">
                            <h3>Địa chỉ cửa hàng:</h3>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.562572349586!2d106.67145889999999!3d10.7681563!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edc7f5620b9%3A0x4ca12cc2952b2cea!2zU8awIFbhuqFuIEjhuqFuaCwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5o!5e0!3m2!1svi!2s!4v1669456532424!5m2!1svi!2s" width="400" height="175" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>

                    </div>

                    <div class="col-lg-6 get_in_touch_col">
                        <div class="get_in_touch_contents">
                            <h1>Lời phản hồi</h1>
                            <p>Vui lòng điền vào mẫu dưới đây để phản hồi.</p>
                            <form action="post">
                                <div>
                                    <input id="input_name" class="form_input input_name input_ph" type="text" name="Name" placeholder="Họ Tên" required="required" data-error="Name is required.">
                                    <input id="input_email" class="form_input input_email input_ph" type="email" name="Email" placeholder="Email" required="required" data-error="Valid email is required." />
                                    <textarea id="input_message" class="input_ph input_message" name="Message" placeholder="Lời nhắn" rows="3" required data-error="Please, write us a message."></textarea>
                                </div>
                                <div>
                                    <button id="review_submit" type="submit" class="red_button message_submit_btn trans_300" value="Submit">Gửi</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>}
<div>
    <div>
        @if (ViewBag.Message != null)
        {
<h3>@ViewBag.Message</h3>}
    </div>
</div>}
</div>
@section scripts{
    <script src="~/Content/assets/js/contact_custom.js"></script>
}
