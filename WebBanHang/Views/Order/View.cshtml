@model WebBanHang.Context.Order
@{ ViewBag.Title = "Chi tiết đơn hàng"; }
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container" style="margin-top: 225px">
    <div class="row">
        <div class="col-md-12">
            <section class="content">
                <div class="container-fluid">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-default">
                        <div class="card-header">
                            <h4>@ViewBag.Title của mã đơn hàng @Model.Code</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Họ tên khách hàng</label>
                                        <p class="form-control">@Model.CustomerName</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <p class="form-control">@Model.Phone</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <p class="form-control">@Model.Email</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ngày đặt</label>
                                        <p class="form-control">@Model.CreatedDate</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tổng tiền</label>
                                        <p class="form-control">@WebBanHang.Common.Common.FormatNumber(Model.TotalAmount, 0)</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        @if (Model.TypePayment == 1)
                                        {
                            <p class="form-control">
                                Chờ thanh toán
                            </p> }
                        else if (Model.TypePayment == 2)
                        {
                            <p class="form-control">
                                Đã thanh toán
                            </p> }
                        else
                        {
                            <p class="form-control">
                                Hủy đơn hàng
                            </p>}
                                    </div>
                                </div>
                                <div class="col-md-6">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <h4>Danh sách sản phẩm</h4>
                                </div>
                                <div class="col-12">
                                    @Html.Action("Partial_SanPham", "Order", new { id = Model.Id })
                                </div>
                            </div>
                            <a class="btn btn-primary" href="/order/index">Quay lại</a>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">

                        </div>
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.container-fluid -->
            </section>
        </div>
    </div>

</div>